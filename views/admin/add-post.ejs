<form action="/add-post" method="POST" class=" bg2" enctype="multipart/form-data">

    <div class=" bg3">
        <h1 class="add-post">Add New Post</h1>
    </div>
<!-- image -->
<div class="upload bg4">

 <div class="bg5">
 
